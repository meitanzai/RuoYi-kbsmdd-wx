.category-list3 {
  overflow: hidden;
}

.category-list3 .list {
  box-sizing: border-box;
  width: 238rpx;
  float: left;
	margin-left: 10rpx;
	margin-bottom: 10rpx;
}
.category-list3 .list .left, .category-list3 .right {
  width: 100%;
}

.category-list3 .list .left .img image {
  width: 100%;
  height: 220rpx;
  display: block;
}

.category-list3 .right .cont {
  padding: 0 12rpx;
}

.category-list3 .right .cont .title {
  height: 76rpx;
  line-height: 1.3;
}
