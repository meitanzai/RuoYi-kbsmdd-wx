/* 用户信息 */
.level {
  color: #666;
  font-size: 25rpx;
  margin-left: 50rpx;
}
.level-open {
  margin-left: 50rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 25rpx;
  color: #666;
}
.user {
  position: relative;
  background: #fff;
  margin-bottom: 90rpx;
}

.user-header {
  display: flex;
  padding-top: 1px;
  width: 100%;
  height: 310rpx;
  align-content: center;
  background-color: #02b6fd;
  background-repeat: no-repeat;
  background-position: center right;
  background-size: auto 100%;
}

.user-header .user-header-cont {
  display: flex;
  margin: auto;
  margin-bottom: 135rpx;
  width: 79%;
  align-items: center;
}

.user-header .user-header-cont .user-header-avatar {
  display: block;
  margin-right: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 5rpx solid #fff;
  overflow: hidden;
}

.user-header .user-header-cont .user-header-avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.user-header .user-header-cont .user-header-cont-name {
  font-size: 32rpx;
  padding: 20rpx 0;
}
.user-header-cont .user-id{
	color: #999;
}

/* 我的导航栏 */

.my-navbar {
  position: absolute;
  left: 19rpx;
  bottom: -70rpx;
  margin: auto;
  padding: 15rpx 0;
  width: 95%;
  box-shadow: 0 1rpx 5rpx 0px rgba(0, 0, 0, 0.05);
  font-size: 30rpx;
  border-top: 1rpx solid #eee;
  border-radius: 5rpx;
  background: #fff;
}

.my-navbar-footer {
  width: 100%;
  padding: 10rpx 0px;
}

.my-navbar-footer .my-navbar-item .my-navbar__icon {
  text-align: center;
  margin: 0 auto;
  display: block;
  color: #000;
  font-size: 36rpx;
}

.my-navbar-footer .my-navbar-item .my-navbar__name {
  display: block;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin: 0 auto;
}

/* 订单导航栏 */

.order-navbar {
  margin: auto;
  padding: 15rpx 0;
  width: 95%;
  box-shadow: 0 1rpx 5rpx 0px rgba(0, 0, 0, 0.05);
  font-size: 30rpx;
  border-radius: 5rpx;
  background: #fff;
  margin-top: 20rpx;
}

.order-navbar-header {
  margin: auto;
  padding: 0 20rpx 10rpx 20rpx;
  height: 60rpx;
  border-bottom: 1px dashed #eee;
  justify-content: space-between;
  align-items: center;
}

.order-navbar-footer {
  width: 100%;
  padding: 10rpx 0px;
}

.order-navbar-footer .order-navbar-item .order-navbar__icon {
  text-align: center;
  margin: 0 auto;
  display: block;
  padding: 10rpx 0;
  width: 50rpx;
	height: 39rpx;
	font-size: 40rpx;
	color: #666;
}

.order-navbar-footer .order-navbar-item .order-navbar__name {
  display: block;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-right: 10rpx;
}

.order-navbar-footer .order-navbar-item .order-badge {
  position: absolute;
  top: 0;
  right: 55rpx;
  font-size: 22rpx;
  background: #ff495e;
  text-align: center;
  line-height: 28rpx;
  color: #fff;
  border-radius: 100%;
  min-height: 30rpx;
  min-width: 30rpx;
  padding: 1rpx;
}


